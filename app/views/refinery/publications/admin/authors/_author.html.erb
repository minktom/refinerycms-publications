<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(author) -%>">
  <span class='title'>
    <%= author.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_publications_admin_author_path(author),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.publications_admin_author_path(author),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => author.name),
        :method => :delete %>
  </span>
</li>
