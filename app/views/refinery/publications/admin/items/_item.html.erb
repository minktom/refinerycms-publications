<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(item) -%>">
  <span class='title'>
    <%= item.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_publications_admin_item_path(item),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.publications_admin_item_path(item),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => item.title),
        :method => :delete %>
  </span>
</li>
